<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup Label="PackageInformation">
		<PackageId>MTASA.Http.Sdk</PackageId>
		<Version>1.0.0</Version>
		<Authors>Luminaire1337</Authors>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>MTASA;HTTP;SDK</PackageTags>
		<RepositoryUrl>https://github.com/Luminaire1337/dotnet-mtasa-http-sdk</RepositoryUrl>
		<PackageProjectUrl>https://github.com/Luminaire1337/dotnet-mtasa-http-sdk</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<Description>
			Unofficial .NET Class Library for interaction with MTA:SA server via HTTP interface
		</Description>
    </PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>
</Project>
